                </td>
            </tr>
            <tr>
                <td style="color: red"></td>
                <td align="right"><label class="BoldTitle" id="lblName5">Name to Copy From and Dispose: </label></td>
                <td>
                    @Html.DropDownListFor(model => model.intName5From, (IEnumerable<SelectListItem>)ViewBag.vbNamesID, new
               {
                   id = "idintName5From",
                   tabIndex = 75,
                   onfocus = "focusFunction('lblName5')",
                   onblur = "blurFunction('lblName5')",
               })
                </td>
            </tr>
            <tr>
                <td style="color: red">*</td>
                <td align="right"><label class="YellowBold" id="lblNameTo">Name to Copy To and Merge With: </label></td>
                <td>
                    @Html.DropDownListFor(model => model.intNameTo, (IEnumerable<SelectListItem>)ViewBag.vbNamesID, new
               {
                   id = "idintNameTo",
