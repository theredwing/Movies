                    @Html.DropDownListFor(model => model.intName3From, (IEnumerable<SelectListItem>)ViewBag.vbNamesID, new
               {
                   id = "idintName3From",
                   tabIndex = 55,
                   onfocus = "focusFunction('lblName3')",
                   onblur = "blurFunction('lblName3')",
               })
                </td>
            </tr>
            <tr>
                <td style="color: red"></td>
                <td align="right"><label class="BoldTitle" id="lblName4">Name to Copy From and Dispose: </label></td>
                <td>
                    @Html.DropDownListFor(model => model.intName4From, (IEnumerable<SelectListItem>)ViewBag.vbNamesID, new
