@model Movies.Models.MergeNamesV

@{
    ViewBag.Title = "MergeNames";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Movies.Models.Errors xErr = ViewBag.Errors;
    Movies.Models.Additions misc = ViewBag.vbMisc;
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#btnSave").click(function (evt) {
            $("#EditPageAction").val("Save");
        });

        $("#btnCancel").click(function (evt) {
            $("#EditPageAction").val("Cancel");
        });
    });
</script>

@using (Html.BeginForm("MergeNames", "Admin", FormMethod.Post))
{
    <div class="BoldTitle">
        <h2>Merge Names</h2>
        @Html.Hidden("xErrMsg", ViewData["Message"])
        @Html.Hidden("strSrchName", Model.strSrchName)
        @Html.Hidden("EditPageAction", misc.EditPageAction)


        @if (Model.TriggerOnLoad)
        {
            <script type="text/javascript">
                    alert(document.getElementById("xErrMsg").value);
            </script>
        }

        <table align="left">
            <tr>
                <td style="color: red">*</td>
                <td align="right"><label class="BoldTitle" id="lblName1">Name to Copy From and Dispose: </label></td>
                <td>
                    @Html.DropDownListFor(model => model.intName1From, (IEnumerable<SelectListItem>)ViewBag.vbNamesID, new
                    {
                       id = "idintName1From",
                       tabIndex = 35,
                       onfocus = "focusFunction('lblName1')",
                       onblur = "blurFunction('lblName1')",
                    })
                </td>
            </tr>
            <tr>
                <td style="color: red"></td>
                <td align="right"><label class="BoldTitle" id="lblName2">Name to Copy From and Dispose: </label></td>
                <td>
                    @Html.DropDownListFor(model => model.intName2From, (IEnumerable<SelectListItem>)ViewBag.vbNamesID, new
               {
                   id = "idintName2From",
                   tabIndex = 45,
                   onfocus = "focusFunction('lblName2')",
                   onblur = "blurFunction('lblName2')",
               })
                </td>
            </tr>
            <tr>
                <td style="color: red"></td>
