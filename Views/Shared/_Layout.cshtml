<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Movies</title>
    <script src="https://code.jquery.com/jquery-latest.js"></script>
    <script src="~/Scripts/shared.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/SpryTabbedPanels.css" rel="stylesheet" type="text/css" />
    <script>
        $(document).ready(function () {
            ('li').on( click(function () {
                $('#WhiteBackPlain').on( click( function () { 
                    $('tblJQuery').show();
                }))
                .not$('#WhiteBackPlain').on( click( function ()  {
                    $('tblJQuery').hide();
                }))
            }))
        });
    </script>
    @Styles.Render("~/Content/css?version=57")
    @Styles.Render("~/Content/themes/base/css")
</head>
<body style="background-image: url(../Images/GuideForPopcornTime.jpg)">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("SearchAndMaintain", "MovieSrchAndEdit", "Home")</li>
                    <li>@Html.ActionLink("Categories", "Categories", "Movies")</li>
                    <li>@Html.ActionLink("JQueryLearning", "Chapter7Menus", "JQuery")</li>
                    <li>@Html.ActionLink("Export", "ExportToExcel", "Home")</li>
                    @*<li>@Html.ActionLink("Import", "MovieImport", "Home")</li>*@
                    <li>@Html.ActionLink("Help", "Help", "Home")</li>
                    <li>@Html.ActionLink("Admin", "AdminIndex", "Admin")</li>
                </ul>
</div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
